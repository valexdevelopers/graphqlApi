generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id String @id @default(uuid())
  name String 
  email String @unique
  password String
  refreshToken String?
  address Address[]
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

}

model Address {
  id String @id @default(uuid())
  address String
  city String
  State String
  postal String
  user User @relation(fields: [userId], references: [id])
  userId String 
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
